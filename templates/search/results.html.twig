{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}

    <h1>SearchController</h1>

    <form action="{{ path('app_search') }}" method="GET">
        <input type="text" name="q" id="search" placeholder="Search">
        <input type="submit" value="Search">
    </form>

    {{ dump(query) }}
{% if results|length > 0 %}
    <ul>
        {% for result in results %}
        {{ dump(result) }}
            {% for room in result %}
                
            <li>{{ room.name }}</li>
            {% endfor %}
        {% endfor %}
    </ul>
{% endif %}
    
{% endblock %}
