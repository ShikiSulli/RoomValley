{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modification de votre demande</h1>
    
    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.room) }}
        {{ form_errors(form.room) }} {# Ajouté pour afficher les erreurs du champ room #}
        {{ form_widget(form.room) }}
    </div>

    <div class="form-group">
        {{ form_label(form.date_start) }}
        {{ form_errors(form.date_start) }} {# Ajouté pour afficher les erreurs du champ date_start #}
        {{ form_widget(form.date_start) }}
    </div>

    <div class="form-group">
        {{ form_label(form.date_end) }}
        {{ form_errors(form.date_end) }} {# Ajouté pour afficher les erreurs du champ date_end #}
        {{ form_widget(form.date_end) }}
    </div>

    <button type="submit" class="btn btn-primary">Confirmer ma Modification</button>

    {{ form_end(form) }}
{% endblock %}
