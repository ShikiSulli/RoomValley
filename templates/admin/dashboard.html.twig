{% extends "@EasyAdmin/page/content.html.twig" %}
{% block content %}
<div class="container-fluid">
	<h1>
		Panneau d'Administration</h1>
	<!-- *************************************************************** -->
	<!-- Start First Cards -->
	<!-- *************************************************************** -->
		<div class="row">
         <div class="col-sm-6 col-lg-3">
			<div class="card border-end">
				<div class="card-body">


					<div class="d-flex align-items-center">

						<div>
							<div class="d-inline-flex align-items-center">
								<h2 class="text-dark mb-1 font-weight-medium">
									{{ reservation|filter(r => r.isConfirmed == 1)|length }}
								</h2>

							</div>
							<h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Confirm√©es
							</h6>
						</div>
						<div class="ms-auto mt-md-3 mt-lg-0">
							<span class="opacity-7 text-muted">
								<i data-feather="user-plus"></i>
							</span>
						</div>

					</div>
				</div>
			</div>
		</div>
		<div class="col-sm-6 col-lg-3">
			<div class="card border-end ">
				<div class="card-body">
					<div class="d-flex align-items-center">
						<div>
							<h2 class="text-dark mb-1 w-100 text-truncate font-weight-medium">{{ reservation|filter(r => r.isConfirmed == 0)|length }}</h2>
							<h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Pre-reservation
							</h6>
						</div>
						<div class="ms-auto mt-md-3 mt-lg-0"></div>
					</div>
				</div>
			</div>
		</div>
<div class="col-sm-6 col-lg-3">
    <div class="card border-end ">
        <div class="card-body{% set notConfirmedReservations = reservation|filter(r => r.isConfirmed == 0 and r.date_start|date("Y-m-d") <= "now"|date_modify("-5 days")) %}{% if notConfirmedReservations|length >= 1 %} bg-danger{% elseif notConfirmedReservations|length == 0 %} bg-success{% endif %}">
            <div class="d-flex align-items-center">
                <div>
                    <div class="d-inline-flex align-items-center">
                        <h2 class="text-dark mb-1 font-weight-medium">{{ notConfirmedReservations|length }}</h2>
                    </div>
                    <h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Pre-Reservations Urgente</h6>
                </div>
                <div class="ms-auto mt-md-3 mt-lg-0">
                    <span class="opacity-7 text-muted">
                        <i data-feather="file-plus"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

		<div class="col-sm-6 col-lg-3">
			<div class="card ">
				<div class="card-body">
					<div class="d-flex align-items-center">
						<div>
							<div class="d-inline-flex align-items-center">
								<h2 class="text-dark mb-1 font-weight-medium">{{ reservation|length }}</h2>
							</div>
							<h6 class="text-muted font-weight-normal mb-0 w-100 text-truncate">Nombres de Reservation Totales</h6>
						</div>
						<div class="ms-auto mt-md-3 mt-lg-0">
							<span class="opacity-7 text-muted">
								<i data-feather="globe"></i>
							</span>
						</div>
					</div>
				</div>
			</div>
		</div>


